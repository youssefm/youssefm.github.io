---
import type { Post } from "../lib/types";
import { formatPublishedOn } from "../lib/util";

export interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post: Post) => (
      <li class="py-12 space-y-6 border-t border-neutral-700">
        <div>
          <h2 class="text-amber-600 text-2xl font-bold tracking-tight">
            <a href={post.url}>{post.frontmatter.title}</a>
          </h2>
          <div class="mt-2 text-neutral-200">
            {formatPublishedOn(post.frontmatter.publishedOn)}
          </div>
        </div>
        <div class="prose text-neutral-400">{post.frontmatter.description}</div>
        <div>
          <a href={post.url} class="hover:text-amber-500">
            Read &rarr;
          </a>
        </div>
      </li>
    ))
  }
</ul>
