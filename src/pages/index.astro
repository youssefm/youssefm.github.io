---
import type { Post } from "../lib/types";
import { sortBy } from "../lib/util";
import Layout from "../layouts/BaseLayout.astro";
import PostList from "../components/PostList.astro";

const posts: Post[] = await Astro.glob("./posts/*.{md,mdx}");
sortBy(posts, (post) => post.frontmatter.publishedOn);
---

<Layout
  title="Youssef Moussaoui's blog"
  description="Long-form thoughts about building software"
>
  <PostList posts={posts} />
</Layout>
